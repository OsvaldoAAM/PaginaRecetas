@{
    ViewData["Title"] = "Editar/Crear Receta";
}

<div id="editar-crear-receta">
    <header>
        <h1>Editar/Crear</h1>
        <div class="editor-actions">
            <button class="btn-cancel">Cancelar</button>
            <button class="btn-save">Enviar</button>
        </div>
    </header>

    <div class="recipe-card">
        <div class="recipe-header">
            <div class="recipe-image">
                <img src="https://via.placeholder.com/100" alt="Recipe Image">
            </div>
            <div class="recipe-details">
                <h2>Título <a href="#" class="edit-icon"><i class="bi bi-pencil"></i></a></h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                <div class="tags">
                    <span>Etiquetas:</span>
                    <a href="#" class="edit-icon"><i class="bi bi-pencil"></i></a>
                </div>
                <div class="rating">
                    ★★★★★ <span class="favorite-icon"><i class="bi bi-heart"></i></span>
                </div>
            </div>
        </div>
    </div>

    <div class="recipe-meta">
        <p><strong>Dificultad:</strong> <span class="difficulty-indicator"></span> <a href="#" class="edit-icon"><i class="bi bi-pencil"></i></a></p>
        <p><strong>Tiempo:</strong> 20 min <a href="#" class="edit-icon"><i class="bi bi-pencil"></i></a></p>
    </div>

    <div class="recipe-content">
        <div class="ingredients">
            <h3>Ingredientes <a href="#" class="edit-icon"><i class="bi bi-pencil"></i></a></h3>
            <ul>
                <li>Lorem ipsum dolor sit amet.</li>
                <li>Consectetur adipiscing elit.</li>
            </ul>
        </div>
        <div class="preparation">
            <h3>Preparación <a href="#" class="edit-icon"><i class="bi bi-pencil"></i></a></h3>
            <ul>
                <li>Lorem ipsum dolor sit amet.</li>
                <li>Consectetur adipiscing elit.</li>
            </ul>
        </div>
    </div>
</div>