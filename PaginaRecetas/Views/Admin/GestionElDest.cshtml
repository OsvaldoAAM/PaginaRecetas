@{
    ViewData["Title"] = "Administración";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<div class="admin-container">
    <header class="admin-header">
        <h1>ADMINISTRACIÓN</h1>
    </header>

    <div class="sidebar">
        <ul>
            <li><a asp-area="" asp-controller="Admin" asp-action="Estadisticas">Estadísticas</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="GestionUs">Gestión de usuarios</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="GestionElDest">Gestión de elementos destacados</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="GestionElCtlg">Gestión de elementos de catálogo</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="Reportes">Reportes</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="RectNuevas">Recetas nuevas</a></li>
        </ul>
    </div>
    <main class="main-content">
        <h2>Elementos destacados</h2>

        
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Receta destacada</th>
                        <th>Estrellas</th>
                        <th>Favoritos</th>
                        <th>Selección</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Receta</td>
                        <td><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></td>
                        <td>100 <i class="fas fa-heart"></i></td>
                        <td>mejor valorada 1</td>
                        <td>
                            <i class="fas fa-trash-alt delete-icon" title="Eliminar"></i>
                        </td>
                    </tr>
                    <tr>
                        <td>Receta</td>
                        <td><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></td>
                        <td>100 <i class="fas fa-heart"></i></td>
                        <td>mejor valorada 2</td>
                        <td>
                            <i class="fas fa-trash-alt delete-icon" title="Eliminar"></i>
                        </td>
                    </tr>
                    
                </tbody>
            </table>

            
            <div class="add-button-container">
                <button class="add-featured-btn">
                    <i class="fas fa-plus"></i> Agregar destacada
                </button>
            </div>

        </div>
    </main>




</div>
